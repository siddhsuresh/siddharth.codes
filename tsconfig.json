{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "lib": ["DOM"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["@/components/*"],
      "@lib/*": ["@/lib/*"],
    }
  },
  "include": ["src", "api", "*.ts"]
}
